# Supabase Configuration (from supabase.com)
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
# Service role key is optional but recommended for server-side operations
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Twitter API Credentials (from developer.twitter.com)
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# Twitter Monitoring Config
# Comma-separated list of Twitter usernames to monitor (without @)
TWITTER_USERNAMES=elonmusk,vitalikbuterin
# Comma-separated list of hashtags to monitor (without #)
TWITTER_HASHTAGS=LAUNCH,PUMPFUN

# Solana Wallet (Base58 encoded private key)
SOLANA_PRIVATE_KEY=your_base58_private_key

# Solana RPC Endpoint
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# PumpPortal API Key (from pumpportal.fun)
PUMPPORTAL_API_KEY=your_pumpportal_api_key

# Token Launch Defaults
DEFAULT_TOKEN_DECIMALS=6
DEFAULT_INITIAL_BUY_SOL=0.1

# SSE Server Configuration
SSE_PORT=3000
SSE_CORS_ORIGIN=*

# Alerting Configuration
ALERTING_ENABLED=true
ALERT_CONSOLE_OUTPUT=true
# Optional: Webhook for custom integrations
ALERT_WEBHOOK_URL=
# Optional: Discord webhook for notifications
DISCORD_WEBHOOK_URL=
# Optional: Telegram bot for notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Classifier Configuration
CLASSIFIER_MIN_CONFIDENCE=0.6
CLASSIFIER_MAX_RISK=0.7
# Comma-separated list of trusted Twitter usernames (bypass risk checks)
TRUSTED_USERS=

# ============================================
# Alpha Aggregator Configuration
# Multi-source signal aggregation from Discord, Telegram, and Reddit
# ============================================

# Discord Bot (create at discord.com/developers)
ALPHA_DISCORD_ENABLED=false
ALPHA_DISCORD_BOT_TOKEN=your_discord_bot_token
# Comma-separated list of Discord channel IDs to monitor
ALPHA_DISCORD_CHANNELS=

# Telegram Bot (create via @BotFather)
ALPHA_TELEGRAM_ENABLED=false
ALPHA_TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Comma-separated list of Telegram chat IDs to monitor
ALPHA_TELEGRAM_CHATS=
ALPHA_TELEGRAM_POLLING=true
# Bot display name and description shown in /start command
ALPHA_TELEGRAM_BOT_NAME=Alpha Signal Bot
ALPHA_TELEGRAM_BOT_DESCRIPTION=Multi-source crypto alpha aggregator

# Reddit API (create at reddit.com/prefs/apps)
ALPHA_REDDIT_ENABLED=false
ALPHA_REDDIT_CLIENT_ID=your_reddit_client_id
ALPHA_REDDIT_CLIENT_SECRET=your_reddit_client_secret
ALPHA_REDDIT_USERNAME=your_reddit_username
ALPHA_REDDIT_PASSWORD=your_reddit_password
ALPHA_REDDIT_USER_AGENT=AlphaAggregator/1.0.0
# Comma-separated list of subreddits to monitor (without r/)
ALPHA_REDDIT_SUBREDDITS=CryptoMoonShots,SatoshiStreetBets
# Poll interval in milliseconds
ALPHA_REDDIT_POLL_INTERVAL=30000

# Alpha Signal Classifier
ALPHA_MIN_CONFIDENCE=0.5
ALPHA_MAX_RISK=0.7
# Comma-separated lists of custom keywords (optional, uses defaults if empty)
ALPHA_LAUNCH_KEYWORDS=
ALPHA_SPAM_KEYWORDS=
# Comma-separated list of trusted channels/users for alpha signals
ALPHA_TRUSTED_CHANNELS=
ALPHA_TRUSTED_USERS=
